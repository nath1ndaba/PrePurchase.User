<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        padding: 0 16px;
    }

    .product-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 1px 3px rgba(42, 113, 163, 0.08);
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid #E5EAF1;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 12px rgba(42, 113, 163, 0.12);
        }

    .product-image {
        height: 140px;
        background: linear-gradient(135deg, #E8F4FA, #87CEEB);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 64px;
        position: relative;
    }

    .add-cart-btn {
        position: absolute;
        bottom: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        background: white;
        border-radius: 10px;
        border: none;
        font-size: 18px;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(42, 113, 163, 0.12);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .add-cart-btn:hover {
            background: #4A9FD8;
            transform: scale(1.1);
        }

    .product-info {
        padding: 12px;
    }

    .product-name {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        color: #1A2332;
    }

    .product-shop {
        font-size: 12px;
        color: #5A6C7D;
        margin-bottom: 8px;
    }

    .product-price {
        font-size: 18px;
        font-weight: 800;
        color: #4A9FD8;
    }
</style>

<div class="product-grid">
    @foreach (var product in Products)
    {
        <div class="product-card" @onclick='() => OnProductClick.InvokeAsync(product.Id)'>
            <div class="product-image">
                @product.Icon
                <button class="add-cart-btn" @onclick='e => AddToCart(e, product.Id)' @onclick:stopPropagation>
                    🛒
                </button>
            </div>
            <div class="product-info">
                <div class="product-name">@product.Name</div>
                <div class="product-shop">@product.ShopName</div>
                <div class="product-price">R @product.Price.ToString("N2")</div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<ProductItem> Products { get; set; } = new();
    [Parameter] public EventCallback<Guid> OnProductClick { get; set; }
    [Parameter] public EventCallback<Guid> OnAddToCart { get; set; }

    public class ProductItem
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Icon { get; set; } = string.Empty;
        public string ShopName { get; set; } = string.Empty;
        public decimal Price { get; set; }
    }

    private async Task AddToCart(MouseEventArgs e, Guid productId)
    {
        await OnAddToCart.InvokeAsync(productId);
    }
}